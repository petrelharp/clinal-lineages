journal = {PLoS genetics},
keywords = {Animals,Base Sequence,Chromosomes,Crossing Over, Genetic,Drosophila melanogaster,Drosophila melanogaster: genetics,Evolution, Molecular,Female,Gene Conversion,Genome,Male,Nucleotide Motifs,Polymorphism, Genetic,Recombination, Genetic},
