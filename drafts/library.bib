keywords = {Algorithms,Computational Biology,Computational Biology: methods,Computer Simulation,Genetic Techniques,Genetic Variation,Genome, Human,Humans,Reproducibility of Results,Sequence Alignment,Sequence Alignment: methods,Sequence Analysis, DNA,Software},
month = jan,
number = {11},
pages = {e7767},
pmid = {19907642},
title = {{BFAST: an alignment tool for large scale genome resequencing.}},
