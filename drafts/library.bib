pages = {378--392},
pmid = {22372546},
title = {{Long-distance gene flow and adaptation of forest trees to rapid climate change.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3490371\&tool=pmcentrez\&rendertype=abstract},
