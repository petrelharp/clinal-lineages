pmid = {11600081},
title = {{Postponed reproduction as an adaptation to winter conditions in Drosophila melanogaster: evidence for clinal variation under semi-natural conditions.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=1088861\&tool=pmcentrez\&rendertype=abstract},
volume = {268},
