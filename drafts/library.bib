journal = {PLoS Biology},
keywords = {Animals,Chromosome Segregation,Chromosome Segregation: genetics,DNA,DNA Topoisomerases,Drosophila,Drosophila: embryology,Drosophila: genetics,Female,Genes,Genetic,Genetic Speciation,Genetic: genetics,Heterochromatin,Heterochromatin: genetics,Heterochromatin: metabolism,Hybridization,Insect,Lethal,Male,Mitosis,Satellite,Satellite: genetics,Satellite: metabolism,Species Specificity,Type II,Type II: metabolism,X Chromosome,X Chromosome: genetics,X Chromosome: metabolism},
month = oct,
number = {10},
pages = {e1000234},
pmid = {19859525},
title = {{Species-specific heterochromatin prevents mitotic chromosome segregation to cause hybrid lethality in Drosophila.}},
