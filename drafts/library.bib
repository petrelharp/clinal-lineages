publisher = {Public Library of Science},
title = {{Evidence that Adaptation in Drosophila Is Not Limited by Mutation at Single Sites}},
url = {http://dx.plos.org/10.1371/journal.pgen.1000924},
volume = {6},
year = {2010}
}
