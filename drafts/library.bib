issn = {0737-4038},
journal = {Molecular biology and evolution},
keywords = {Animals,Base Composition,Chronobiology Phenomena,Chronobiology Phenomena: genetics,Codon,Codon: genetics,Databases, Nucleic Acid,Drosophila melanogaster,Drosophila melanogaster: genetics,Evolution, Molecular,Mutation,Mutation: genetics},
month = jan,
number = {1},
pages = {36--44},
pmid = {12949132},
title = {{Temporal patterns of fruit fly (Drosophila) evolution revealed by mutation clocks.}},
