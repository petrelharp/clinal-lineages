keywords = {Animals,Chromosome Breakage,Chromosome Inversion,Chromosomes, Insect,Drosophila,Drosophila: classification,Drosophila: genetics,Female,Gene Deletion,Gene Duplication,Male,Segmental Duplications, Genomic},
month = jul,
