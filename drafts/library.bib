pages = {369--87},
pmid = {12933562},
title = {{Genomic control for association studies: a semiparametric test to detect excess-haplotype sharing.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/12933562},
volume = {1},
year = {2000}
}
