journal = {Evolution; international journal of organic evolution},
keywords = {Age Factors,Analysis of Variance,Animals,Cold Temperature,Drosophila melanogaster,Drosophila melanogaster: physiology,Environment,Female,Fertility,Geography,Hot Temperature,Longevity,Male,North America,Proportional Hazards Models,Reproduction,Reproduction: physiology,Survival Analysis},
